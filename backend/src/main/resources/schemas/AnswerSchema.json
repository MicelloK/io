{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Answer Schema",
  "type": "object",
  "description": "Schema for form answers",
  "properties": {
    "question": {
      "type": "string",
      "description": "Required field for question"
    },
    "answers": {
      "type": "array",
      "minItems": 1,
      "description": "Required field for answers",
      "items": {
        "type": "string",
        "minItems": 1
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "question",
    "answers"
  ]
}