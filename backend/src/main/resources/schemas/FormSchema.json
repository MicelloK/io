{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Form Answers Schema",
  "type": "object",
  "description": "Schema for form answers",
  "properties": {
    "longerAnswerField": {
      "type": "string",
      "description": "Required field for longer answer",
      "minLength": 1,
      "pattern": "^\\S+(\\s+\\S+){9,199}$"
    },
    "shortAnswerField": {
      "type": "string",
      "description": "Optional field for short answer"
    },
    "multiSelectionField": {
      "type": "array",
      "description": "Optional field for multi selection",
      "items": {
        "type": "string"
      }
    },
    "singleSelectionField": {
      "type": "string",
      "description": "Optional field for single selection"
    },
    "radioButtonFields": {
      "type": "object",
      "description": "Optional radio buttons",
      "additionalProperties": {
        "type": "string"
      }
    },
    "checkboxFields": {
      "type": "object",
      "description": "Optional checkboxes",
      "additionalProperties": {
        "type": "boolean"
      }
    }
  },
  "additionalProperties": {
    "type": "object"
  },
  "required": [
    "LongerAnswer"
  ]
}
