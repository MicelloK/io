{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Form Questions Schema",
  "type": "object",
  "description": "Schema for form questions",
  "properties": {
    "longQuestionFields": {
      "type": "array",
      "description": "Required field for longer answer",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "shortQuestionFields": {
      "type": "array",
      "minItems": 1,
      "description": "Optional field for short answer",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "multiSelectionFields": {
      "type": "array",
      "description": "Optional field for multi selection",
      "minItems": 1,
      "items": {
        "type": "object",
        "description": "Multi selection field",
        "additionalProperties": false,
        "properties": {
          "question": {
            "type": "string",
            "minLength": 1
          },
          "options": {
            "type": "array",
            "description": "Options for multi selection",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1,
              "pattern": "^\\S+(\\s+\\S+)*$"
            }
          }
        },
        "required": [
          "question",
          "options"
        ]
      }
    },
    "singleSelectionFields": {
      "type": "array",
      "description": "Optional field for multi selection",
      "minItems": 1,
      "items": {
        "type": "object",
        "description": "Multi selection field",
        "additionalProperties": false,
        "properties": {
          "question": {
            "type": "string",
            "minLength": 1
          },
          "options": {
            "type": "array",
            "description": "Options for multi selection",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1,
              "pattern": "^\\S+(\\s+\\S+)*$"
            }
          }
        },
        "required": [
          "question",
          "options"
        ]
      }
    },
    "checkboxFields": {
      "type": "array",
      "description": "Optional checkboxes",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1,
        "pattern": "^\\S+(\\s+\\S+)*$"
      }
    },
    "additionalProperties": false,
    "required": [
      "longQuestionFields"
    ]
  }
}
